{
  "manifest_version": 3,
  "name": "Smart Form Filler",
  "version": "2.0.0",
  "description": "Auto-detect and fill forms with your saved information. Multi-profile support, templates, AI-powered field matching.",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus", "tabs"],

  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.tiktok.com/*",
        "*://*.instagram.com/*",
        "*://*.twitch.tv/*",
        "*://*.hulu.com/*",
        "*://*.disneyplus.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "trigger-fill": {
      "suggested_key": {
        "default": "Alt+F",
        "mac": "Alt+F"
      },
      "description": "Fill the current form"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Open Smart Form Filler popup"
    }
  }
}
